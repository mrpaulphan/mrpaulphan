{% extends "_layout" %}

{% block content %}


<section class="hero hero--home section">
  {% for item in entry.hero %}
  {% switch item.type %}
    {% case "block" %}
    {{ (item.image.first is not empty ? '<img class="hero_image" src="'~item.image.first.url~'" alt="'~item.image.first.title~'" />'  : empty) | raw}}
      <div class="hero_content {{ item.position }}">
        <div class="page spacing">
        <h1 class="hero_title alpha--l">{{ item.heading }}</h1>
        <p class="hero_body--home gamma">{{ item.body | stripP }}</p>
      </div>
    </div>
  {% endswitch %}
  {% endfor %}
</section>




<section class="work">
{% for project in craft.entries.section('projects') %}
  {% set title = project.title %}
  {% set url = project.url %}
  {% set featuredImage = project.featuredImage is empty ? "http://placehold.it/400x200" : project.featuredImage  %}
  {% set bandImage = project.bandImage is empty ? empty : 'style=background-image:url("'~project.bandImage.first.url~'")'   %}

  <div class="band" {{ bandImage }}>
    <a class="band_inner page" href="{{ url }}">
      <div class="band_content spacing--half">
        <h2 class="band_title beta">{{ title }}</h2>
        <p class="band_desc gamma--s">View Project</p>
      </div>
    </a>
  </div>
{% endfor %}
</section>

{% endblock %}
